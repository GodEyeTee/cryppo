{
  "general": {
    "project_name": "CRYPPO",
    "project_full_name": "CRYPtocurrency Position Optimization",
    "version": "0.1.0",
    "description": "\u0e23\u0e30\u0e1a\u0e1a\u0e08\u0e33\u0e25\u0e2d\u0e07\u0e01\u0e32\u0e23\u0e40\u0e17\u0e23\u0e14\u0e04\u0e23\u0e34\u0e1b\u0e42\u0e15\u0e17\u0e35\u0e48\u0e2a\u0e21\u0e08\u0e23\u0e34\u0e07\u0e2a\u0e33\u0e2b\u0e23\u0e31\u0e1a\u0e01\u0e32\u0e23\u0e1e\u0e31\u0e12\u0e19\u0e32\u0e41\u0e25\u0e30\u0e17\u0e14\u0e2a\u0e2d\u0e1a\u0e2d\u0e31\u0e25\u0e01\u0e2d\u0e23\u0e34\u0e17\u0e36\u0e21 Reinforcement Learning \u0e02\u0e31\u0e49\u0e19\u0e2a\u0e39\u0e07",
    "log_level": "INFO",
    "random_seed": 42,
    "timezone": "Asia/Bangkok"
  },
  "data": {
    "default_symbol": "BTCUSDT",
    "default_timeframes": [
      "1m",
      "5m",
      "15m",
      "1h",
      "4h",
      "1d"
    ],
    "default_start_date": "2023-01-01",
    "default_end_date": "2023-12-31",
    "data_dir": "data",
    "raw_dir": "data/raw",
    "processed_dir": "data/processed",
    "indicators_dir": "data/indicators",
    "batch_size": 1024,
    "window_size": 60,
    "detail_timeframe": "1m",
    "base_timeframe": "5m",
    "file_format": "parquet",
    "use_gpu_for_preprocessing": true
  },
  "binance": {
    "base_url": "https://api.binance.com/api/v3",
    "klines_endpoint": "/klines",
    "exchange_info_endpoint": "/exchangeInfo",
    "max_candles_per_request": 1000,
    "request_delay": 0.5
  },
  "preprocessing": {
    "use_log_transform": true,
    "use_z_score": true,
    "handle_missing_values": true,
    "remove_outliers": false,
    "outlier_std_threshold": 3.0,
    "fill_missing_strategy": "ffill",
    "min_data_points": 1000,
    "train_test_split_ratio": 0.8,
    "validation_set_ratio": 0.1
  },
  "indicators": {
    "default_indicators": [
      "rsi",
      "macd",
      "bollinger_bands",
      "ema",
      "sma",
      "atr",
      "relative_volume"
    ],
    "rsi_period": 14,
    "macd_fast_period": 12,
    "macd_slow_period": 26,
    "macd_signal_period": 9,
    "bollinger_period": 20,
    "bollinger_std": 2.0,
    "ema_periods": [
      9,
      21,
      50,
      200
    ],
    "sma_periods": [
      10,
      50,
      200
    ],
    "atr_period": 14,
    "relative_volume_period": 10
  },
  "environment": {
    "initial_balance": 10000.0,
    "fee_rate": 0.0025,
    "leverage": 1.0,
    "liquidation_threshold": 0.8,
    "stop_loss": 0.1,
    "take_profit": 0.2,
    "action_type": "discrete",
    "slippage": 0.0005,
    "render_mode": null,
    "episode_length": null,
    "reward_function": "sharpe",
    "use_detail_timeframe": true,
    "use_transaction_costs": true,
    "use_liquidation": true,
    "use_realistic_slippage": true
  },
  "model": {
    "model_type": "double_dqn",
    "learning_rate": 0.0001,
    "discount_factor": 0.99,
    "optimizer": "adam",
    "loss_function": "mse",
    "batch_size": 128,
    "target_update_frequency": 1000,
    "replay_buffer_size": 100000,
    "min_replay_buffer_size": 1000,
    "exploration_initial": 1.0,
    "exploration_final": 0.05,
    "exploration_decay": 0.99,
    "hidden_layers": [
      256,
      128,
      64
    ],
    "activation_function": "relu",
    "use_batch_norm": true,
    "dropout_rate": 0.2,
    "weight_decay": 1e-05,
    "clip_grad_norm": 1.0,
    "double_q": true,
    "dueling": false,
    "noisy": false,
    "prioritized_replay": false,
    "alpha": 0.6,
    "beta": 0.4,
    "beta_increment": 0.001,
    "reg_lambda": 0.01
  },
  "training": {
    "total_timesteps": 100,
    "save_frequency": 10000,
    "eval_frequency": 5000,
    "log_frequency": 1000,
    "checkpoint_dir": "outputs/models",
    "log_dir": "outputs/logs",
    "use_tensorboard": true,
    "max_episode_steps": 1000,
    "early_stopping_patience": 10,
    "early_stopping_threshold": 0.01,
    "num_eval_episodes": 5
  },
  "backtest": {
    "start_date": null,
    "end_date": null,
    "initial_balance": 10000.0,
    "fee_rate": 0.0025,
    "leverage": 1.0,
    "use_stop_loss": true,
    "use_take_profit": true,
    "stop_loss": 0.1,
    "take_profit": 0.2,
    "plot_results": true,
    "save_trades": true,
    "output_dir": "outputs/backtest_results",
    "verbose": true
  },
  "cuda": {
    "use_cuda": true,
    "device": 0,
    "precision": "float32",
    "memory_fraction": 0.7,
    "benchmark": true,
    "deterministic": false
  }
}